{
  // Require .prettierrc
  "prettier.requireConfig": true,

  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "markdown.mdx",
    "Markdown",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    // "ruby"
  ],

  // Show docs and preview next to auto-completion
  "suggest.enablePreview": true,
  "suggest.disableKind": true,
  "signature.preferShownAbove": true,

  // Omg
  "codeLens.enable": true,
  "typescript.implementationsCodeLens.enable": false,
  "typescript.referencesCodeLens.enable": false,
  "javascript.implementationsCodeLens.enable": false,
  "javascript.referencesCodeLens.enable": false,

  "suggest.completionItemKindLabels": {
    "keyword": "\uf1de",
    "variable": "\ue79b",
    "value": "\uf89f",
    "operator": "\u03a8",
    "function": "\u0192",
    "reference": "\ufa46",
    "constant": "\uf8fe",
    "method": "\uf09a",
    "struct": "\ufb44",
    "class": "\uf0e8",
    "interface": "\uf417",
    "text": "\ue612",
    "enum": "\uf435",
    "enumMember": "\uf02b",
    "module": "\uf40d",
    "color": "\ue22b",
    "property": "\ue624",
    "field": "\uf9be",
    "unit": "\uf475",
    "event": "\ufacd",
    "file": "\uf723",
    "folder": "\uf114",
    "snippet": "\ue60b",
    "typeParameter": "\uf728",
    "default": "\uf29c"
  },

  // Gutter symbols
  "diagnostic.errorSign": "▬",
  "diagnostic.warningSign": "▪",
  "diagnostic.infoSign": "▪",
  "diagnostic.hintSign": "⋅",

  // "solargraph.useBundler": true,
  "solargraph.autoformat": true,
  "solargraph.formatting": true,
  "solargraph.diagnostics": true,
  "solargraph.hover": true,

  "snippets.userSnippetsDirectory": "~/.config/nvim/ultisnips",

  // CSS: it can't process things like @apply, so it's probably better that it's off
  "css.validate": false
}

